<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="MainAppTheme" parent="android:style/Theme">
        <!-- TEXT -->
		<item name="android:textColorPrimary">@color/black</item>
		<item name="android:textColor">@color/black</item>
		<item name="android:textColorTertiary">@android:color/tertiary_text_dark</item>
		<item name="android:textColorPrimaryInverse">@android:color/primary_text_light</item>
		<item name="android:textColorSecondaryInverse">@android:color/secondary_text_light</item>
		<item name="android:textColorTertiaryInverse">@android:color/tertiary_text_light</item>    	
	<!-- 	<item name="android:textColorHighlight">@color/black</item>
		<item name="android:textColorHighlightInverse">@color/black</item>
		<item name="android:textColorLink">@color/black</item>
		<item name="android:textColorLinkInverse">@color/black</item> -->
      
		<!-- Dialog 
		<item name="android:alertDialogStyle">@style/AlertDialog</item> -->
		
		
		<!-- Button -->
		<item name="android:buttonStyle">@style/MyCustomButton</item>
      
		<!-- Window -->
		<item name="android:windowTitleStyle">@style/MyCustomBar</item>
		<item name="android:windowTitleBackgroundStyle">@style/MyCustomBarBackground</item>
		<item name="android:colorBackgroundCacheHint">@color/pale_brown</item>
		<item name="android:windowBackground">@color/pale_brown</item> 
      
      <!--<item name="android:listViewStyle">@style/MyCustomListView</item>-->
      
      <!-- View Style 
      <item name="android:textViewStyle">@style/MyCustomListView</item>   -->
   </style>
   
   <style name="PreferenceTheme" parent="android:style/Theme">
		
		<!--  <item name="android:background">@drawable/list_selector</item>-->
		
		<item name="android:checkboxStyle">@style/MyCustomCheckBox</item>  
		<item name="android:textColor">@color/black</item>
		<item name="android:preferenceStyle">@style/MyCustomListView</item>
		<!-- Window -->
		<item name="android:windowTitleStyle">@style/MyCustomBar</item>
		<item name="android:windowTitleBackgroundStyle">@style/MyCustomBarBackground</item>
		<item name="android:colorBackgroundCacheHint">@color/pale_brown</item>
		<item name="android:windowBackground">@drawable/list_selector</item> 
		
		<item name="android:alertDialogStyle">@style/AlertDialog</item>
		
		 
   </style>
   
   <style name="MyCustomButton" parent="android:Widget.Button">
		<item name="android:background">@drawable/botton_selector</item>
		<item name="android:padding">10dp</item>
		
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">#ffffff</item>
		<item name="android:gravity">center</item>
		<item name="android:layout_margin">3dp</item>
		<item name="android:shadowColor">#000000</item>
	</style>
   
   <style name="MyCustomBar" >
       	<item name="android:background">@color/bright_yellow</item>
       <item name="android:textColor">@color/black</item>
       	<item name="android:paddingLeft">8dp</item>
   </style>
   
     <style name="MyCustomBarBackground" >
       	<item name="android:background">@color/bright_yellow</item>
   </style>
   
   <style name="MyCustomListView" parent="android:Widget.ListView">
	<item name="android:background">@drawable/list_selector</item>
       	<item name="android:cacheColorHint">@android:color/transparent</item>
       	<item name="android:textColor">@color/black</item>
   </style>
   
   <style name="MyCustomCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
	<item name="android:button">@drawable/checkbox_selector</item>
</style>
   

    

    <style name="CustomDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@null</item>
        <item name="android:alertDialogStyle">@style/AlertDialog</item> 
    </style> 
    
    <style name="AlertDialog" parent="@android:style/Theme.Dialog">        
		<item name="android:fullBright">@android:color/transparent</item>       
		<item name="android:fullDark">@android:color/transparent</item>
		<item name="android:topBright">@color/bright_yellow</item>        
		<item name="android:topDark">@color/bright_yellow</item>        
		<item name="android:centerBright">@color/basic_blue2</item>        
		<item name="android:centerDark">@color/basic_blue2</item>        
		<item name="android:centerMedium">@color/basic_blue2</item>       
		<item name="android:bottomBright">@color/basic_blue3</item>        
		<item name="android:bottomDark">@color/basic_blue3</item>        
		<item name="android:bottomMedium">@color/basic_blue3</item>   
     </style>
   



    
</resources>