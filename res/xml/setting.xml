<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
        <PreferenceCategory
                android:title="Language Package">
                
         <Preference
         		android:title="List Package"
                android:summary="Select/Remove installed packages"
                android:key="listPref" />
              		
         
         
        <PreferenceScreen
               android:title="Install Package"
         		android:summary="Install/Update new package"
         		android:key="installPref" >
                <Preference
                        android:name="Install from Internet"
                        android:summary="Download and Install directly from internet"
                        android:title="Install from Internet"
                        android:key="installSVNPref" />
                
                 <Preference
                        android:name="Install from SDcard"
                        android:summary="Install localy downloaded package"
                        android:title="Install from SDcard"
                        android:key="installLocalPref" />
        
        </PreferenceScreen>
         
         
        </PreferenceCategory>
        <PreferenceCategory
                android:title="Application Setting">
		<CheckBoxPreference
		        android:title="Cache Enable"
		        android:defaultValue="false"
		        android:summary="For quick translation enable"
		        android:key="CachePref" />
		
		<CheckBoxPreference
		        android:title="Mark Enable"
		        android:defaultValue="false"
		        android:summary="Mark the unknown words"
		        android:key="MarkPref" />
		
		<CheckBoxPreference
		        android:title="ClipBoard get Enable"
		        android:defaultValue="false"
		        android:summary="Fill input from clipboard"
		        android:key="ClipGetPref" />
		
		<CheckBoxPreference
		        android:title="ClipBoard push Enable"
		        android:defaultValue="false"
		        android:summary="Copy output to clipboard"
		        android:key="ClipPushPref" />
        
        <Preference
                android:title="Widget Settings"
                android:summary="Widgets such as shortcut for specific language"
                android:key="WidgetPref" />
        
        <Preference
                android:title="Update Database"
                android:summary="Update or repair database"
                android:key="UpdateDBPref" />
        
        </PreferenceCategory>

</PreferenceScreen>
